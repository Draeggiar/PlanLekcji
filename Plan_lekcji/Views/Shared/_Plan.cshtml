@model IEnumerable<Plan_lekcji.DAL.Przedmiot>

<table style="border: 1px solid black; margin: 40px; width: 100%;">
    <tr>
        <th>Godziny</th>
        <th>Poniedziałek</th>
        <th>Wtorek</th>
        <th>Środa</th>
        <th>Czwartek</th>
        <th>Piątek</th>
        <th>Sobota</th>
        <th>Niedziela</th>
    </tr>

    @{
        if (Model != null)
        {
            var r = 1;
            var t = 1;
            List<string> godziny = new List<string>();
            foreach (var przedmiot in Model)
            {
                if (!godziny.Contains(przedmiot.Godzina))
                {
                    <tr>
                        <td>
                            @{
                                var tName = "r" + r + "t" + t;
                                t++;
                            }
                            <textarea id="@tName" onkeydown="resizeTextarea('@tName')">
                                
                                
                            @Html.DisplayFor(modelItem => przedmiot.Godzina)
                            @{ godziny.Add(przedmiot.Godzina); }
                    
                            
                            </textarea>
                        </td>

                        <td>
                            @{
                                tName = "r" + r + "t" + t;
                                t++;
                            }
                            <textarea id="@tName" onkeydown="resizeTextarea('@tName')">
                                
                                
                            @foreach (var nazwaPrzedmiotu in Model)
                            {
                                if (nazwaPrzedmiotu.Dzien.DzienTygodnia.Equals("Poniedziałek") &&
                                    przedmiot.Godzina.Equals(nazwaPrzedmiotu.Godzina))
                                {
                                    @Html.DisplayFor(modelItem => przedmiot.Nazwa)
                                }
                            }
                         
                            
                            </textarea>
                        </td>
                        <td>
                            @{
                                tName = "r" + r + "t" + t;
                                t++;
                            }
                            <textarea id="@tName" onkeydown="resizeTextarea('@tName')">
                                
                                
                             @foreach (var nazwaPrzedmiotu in Model)
                             {
                                 if (nazwaPrzedmiotu.Dzien.DzienTygodnia.Equals("Wtorek") &&
                                     przedmiot.Godzina.Equals(nazwaPrzedmiotu.Godzina))
                                 {
                                     @Html.DisplayFor(modelItem => przedmiot.Nazwa)
                                 }
                             }
                         
                            
                            </textarea>
                        </td>
                        <td>
                            @{
                                tName = "r" + r + "t" + t;
                                t++;
                            }
                            <textarea id="@tName" onkeydown="resizeTextarea('@tName')">
                                
                                
                             @foreach (var nazwaPrzedmiotu in Model)
                             {
                                 if (nazwaPrzedmiotu.Dzien.DzienTygodnia.Equals("Środa") &&
                                     przedmiot.Godzina.Equals(nazwaPrzedmiotu.Godzina))
                                 {
                                     @Html.DisplayFor(modelItem => przedmiot.Nazwa)
                                 }
                             }
                         
                            
                            </textarea>
                        </td>
                        <td>
                            @{
                                tName = "r" + r + "t" + t;
                                t++;
                            }
                            <textarea id="@tName" onkeydown="resizeTextarea('@tName')">
                                
                                
                             @foreach (var nazwaPrzedmiotu in Model)
                             {
                                 if (nazwaPrzedmiotu.Dzien.DzienTygodnia.Equals("Czwartek") &&
                                     przedmiot.Godzina.Equals(nazwaPrzedmiotu.Godzina))
                                 {
                                     @Html.DisplayFor(modelItem => przedmiot.Nazwa)
                                 }
                             }
                         
                            
                            </textarea>
                        </td>
                        <td>
                            @{
                                tName = "r" + r + "t" + t;
                                t++;
                            }
                            <textarea id="@tName" onkeydown="resizeTextarea('@tName')">
                                
                                
                             @foreach (var nazwaPrzedmiotu in Model)
                             {
                                 if (nazwaPrzedmiotu.Dzien.DzienTygodnia.Equals("Piątek") &&
                                     przedmiot.Godzina.Equals(nazwaPrzedmiotu.Godzina))
                                 {
                                     @Html.DisplayFor(modelItem => przedmiot.Nazwa)
                                 }
                             }
                         
                            
                            </textarea>
                        </td>
                        <td>
                            @{
                                tName = "r" + r + "t" + t;
                                t++;
                            }
                            <textarea id="@tName" onkeydown="resizeTextarea('@tName')">
                                
                                
                             @foreach (var nazwaPrzedmiotu in Model)
                             {
                                 if (nazwaPrzedmiotu.Dzien.DzienTygodnia.Equals("Sobota") &&
                                     przedmiot.Godzina.Equals(nazwaPrzedmiotu.Godzina))
                                 {
                                     @Html.DisplayFor(modelItem => przedmiot.Nazwa)
                                 }
                             }
                         
                            
                            </textarea>
                        </td>
                        <td>
                            @{
                                tName = "r" + r + "t" + t;
                                t++;
                            }
                            <textarea id="@tName" onkeydown="resizeTextarea('@tName')">
                                
                                
                             @foreach (var nazwaPrzedmiotu in Model)
                             {
                                 if (nazwaPrzedmiotu.Dzien.DzienTygodnia.Equals("Niedziela") &&
                                     przedmiot.Godzina.Equals(nazwaPrzedmiotu.Godzina))
                                 {
                                     @Html.DisplayFor(modelItem => przedmiot.Nazwa)
                                 }
                             }
                         
                            
                            </textarea>
                        </td>
                        }
                    </tr>
                    r++;
                }
            }
        }
    }
</table>

<style>
    textarea {
        max-width: 130px;
        overflow: hidden;
        resize: none;
    }

    tr th { text-align: center; }

    td { text-align: center; }
</style>

@section Scripts{
    <script>
        function resizeTextarea(id) {
            var a = document.getElementById(id);
            a.style.height = 'auto';
            a.style.height = a.scrollHeight + 'px';
        }

        function init() {
            var a = document.getElementsByTagName('textarea');
            for (var i = 0, inb = a.length; i < inb; i++) {
                if (a[i].getAttribute('data-resizable') == 'true')
                    resizeTextarea(a[i].id);
            }
        }

        addEventListener('DOMContentLoaded', init);
    </script>
}