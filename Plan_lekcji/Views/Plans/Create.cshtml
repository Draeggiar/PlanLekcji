@using Plan_lekcji.DAL
@model Plan_lekcji.DAL.Plan

@{
    ViewBag.Title = "Stwórz nowy plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Plans"))
{
    <div>
        @Html.LabelFor(plan => plan.Nazwa)<br/>
        @Html.TextAreaFor(plan => plan.Nazwa)
    </div>
    <table style="border: 1px solid black; margin: 40px; width: 100%;">
        <tr>
            <th>Godziny</th>
            <th>Poniedziałek</th>
            <th>Wtorek</th>
            <th>Środa</th>
            <th>Czwartek</th>
            <th>Piątek</th>
            <th>Sobota</th>
            <th>Niedziela</th>
        </tr>
        @using (Html.BeginCollectionItem("Przedmiot"))
        {
            <tr>
                <td>
                    @Html.TextAreaFor(plan => plan.Przedmiot.Select(p => p.Nazwa), new {id = "r1t1", onkeydown = "resizeTextarea('r1t1')"})
                </td>
                <td>
                    @Html.TextAreaFor(plan => plan.Przedmiot., new {id = "r1t2", onkeydown = "resizeTextarea('r1t2')"})
                </td>
                <td>
                    @Html.TextAreaFor(plan => new Przedmiot().Nazwa), new { id = "r1t3", onkeydown = "resizeTextarea('r1t3')" })
                </td>
                <td>
                    @Html.TextAreaFor(plan => new Przedmiot().Nazwa), new { id = "r1t4", onkeydown = "resizeTextarea('r1t4')" })
                </td>
                <td>
                    @Html.TextAreaFor(plan => new Przedmiot().Nazwa), new { id = "r1t5", onkeydown = "resizeTextarea('r1t5')" })
                </td>
                <td>
                    @Html.TextAreaFor(plan => new Przedmiot().Nazwa), new { id = "r1t6", onkeydown = "resizeTextarea('r1t6')" })
                </td>
                <td>
                    @Html.TextAreaFor(plan => new Przedmiot().Nazwa), new { id = "r1t7", onkeydown = "resizeTextarea('r1t7')" })
                </td>
                <td>
                    @Html.TextAreaFor(plan => new Przedmiot().Nazwa), new { id = "r1t8", onkeydown = "resizeTextarea('r1t8')" })
                </td>
            </tr>
        }
    </table>
    <p>
        <a type="button" class="btn btn-info" href=@Url.Action("Index")>Powrót</a>
        <input type="submit" value="Create"/>
    </p>
}

<style>
    textarea {
        max-width: 130px;
        overflow: hidden;
        resize: none;
    }

    tr th { text-align: center; }

    td { text-align: center; }
</style>

@section Scripts{
    <script>
        function resizeTextarea(id) {
            var a = document.getElementById(id);
            a.style.height = 'auto';
            a.style.height = a.scrollHeight + 'px';
        }

        function init() {
            var a = document.getElementsByTagName('textarea');
            for (var i = 0, inb = a.length; i < inb; i++) {
                if (a[i].getAttribute('data-resizable') == 'true')
                    resizeTextarea(a[i].id);
            }
        }

        addEventListener('DOMContentLoaded', init);
    </script>
}